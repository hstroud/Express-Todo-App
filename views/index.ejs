<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link href="/css/styles.css" rel="stylesheet" type = "text/css"> 
        
        <title>ToDO APP</title>
    </head>
    
    <body>
        <!-- navbar -->
        <nav>
            <a>TodoList</a>
        </nav>

        <div>
            <h1>Enter Todo Item</h1>
            <!-- input form -->
            <form action="/newtodo"  method="POST">
                <div>
                    <input type="text" name="item" placeholder="Enter Todo Item"
                    value="this is a new todo list item">
                    <span>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </span>
                </div>
            </form>
            <div>
                <div class="needTodo">
                    <h2>ToDo</h2>
                    <form action = "/completeItem" method="POST">
                        <ul>
                            <% for(var i = 0; i < todoList.length; i++) { %>
                                <% if(todoList[i].done === false) { %>
                                    <li>
                                        <input type = "checkbox" name = "check[]" value = "<%= todoList[i].name %>" /> <%= todoList[i].name %>
                                    </li>
                                <% } %>
                            <% } %>
                        </ul>
                    
                        <button type="submit">Done</button>
                    </form>
                </div>

                <div class="donetodo">
                    <h2>Completed</h2>
                    <ul>
                        <% for(var i = 0; i < todoList.length; i++) { %>
                            <% if(todoList[i].done === true) { %>
                                <li>
                                    <s><%= todoList[i].name %></s>
                                </li>
                            <% } %>
                        <% } %>
                    </ul>
                </div>
               
            </div>
        </div>

    </body>

</html>